generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String
  password  String
  admin     Boolean
  foto       String 
  telefone String
  Nascimento DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  carrinho  Carrinho?

  @@map("users")
}

model Produto {
  id          String    @id @default(uuid())
  name        String    @unique
  descricao   String
  preco       Float
  quantidade  Int

  imagens     Imagem[] 
  carrinhos   CarrinhoProduto[]

  @@map("produto")
}

model Imagem {
  id        String   @id @default(uuid())
  url       String   
  idProduto String   

  produto   Produto  @relation(fields: [idProduto], references: [id], onDelete: Cascade)

  @@map("imagem")
}

model Carrinho {
  id          String     @id @default(uuid())
  idUsuario   String     @unique

  user        User       @relation(fields: [idUsuario], references: [id])
  produtos    CarrinhoProduto[]

  @@map("carrinho")
}

model CarrinhoProduto {
  idCarrinho  String
  idProduto   String
  quantidade  Int      @default(1)

  carrinho    Carrinho @relation(fields: [idCarrinho], references: [id], onDelete: Cascade)
  produto     Produto  @relation(fields: [idProduto], references: [id], onDelete: Cascade)

  @@id([idCarrinho, idProduto])
  @@map("carrinho_produto")
}
